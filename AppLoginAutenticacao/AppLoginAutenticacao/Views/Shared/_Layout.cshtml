<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Autenticação ASP.NET </title>
    <link rel="shortcut icon" type="imagex/png" href="imagens/icone.ico">
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top" style="background-color:lightpink">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                @Html.ActionLink("Application name", "Index", "Home", new { area = "" }, new { @class = "navbar-brand", style = "color: black;  font-size: 15px; font-family: Cursive;" })
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>@Html.ActionLink("Início", "Index", "Home", new { area = "" }, new { style = "color: black;  font-size: 15px; font-family: Cursive;" })</li>
                    <li>@Html.ActionLink("Administração", "Index", "Administrativo", new { area = "" }, new { style = "color: black;  font-size: 15px; font-family: Cursive;" })</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @if (User.Identity.IsAuthenticated)
                    {
                        <li>@Html.ActionLink("Olá " + @User.Identity.Name, "", "", new { area = "" }, new { style = "color: black;  font-size: 15px; font-family: Cursive;" })</li>
                        <li>@Html.ActionLink("Alterar Senha", "AlterarSenha", "Autenticacao", new { area = "" }, new { style = "color: black;  font-size: 15px; font-family: Cursive;" })</li>
                        <li>@Html.ActionLink("Sair", "Logout", "Autenticacao", new { area = "" }, new { style = "color: black;  font-size: 15px; font-family: Cursive;" })</li>
                    }
                    else
                    {
                        <li>@Html.ActionLink("Cadastre-se", "Insert", "Autenticacao", new { area = "" }, new { style = "color: black;  font-size: 15px; font-family: Cursive;" })</li>
                        <li>@Html.ActionLink("Login", "Login", "Autenticacao", new { area = "" }, new { style = "color: black;  font-size: 15px; font-family: Cursive;" })</li>
                    }
                </ul>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - Autenticação ASP.NET </p>
        </footer>
    </div>

    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @RenderSection("scripts", required: false)
</body>
</html>
